<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="Signing.targets" />
  <Import Project="AddXmlLanguage.targets" />

  <PropertyGroup Label="BuildInfoTxt">
    <BuildInfoTxtDependsOn>
      $(BuildInfoTxtDependsOn);
	  GenerateNuspec
    </BuildInfoTxtDependsOn>
	<BuildInfoTxtFilePath Condition="'$(BuildInfoTxtFilePath)'==''">$(OutputPath)buildInfo.txt</BuildInfoTxtFilePath>
	<WriteBuildInfoTxt Condition="'$(WriteBuildInfoTxt)'==''">$(TF_BUILD)</WriteBuildInfoTxt>
  </PropertyGroup>

  <Target
	Name="BuildInfoTxt"
	DependsOnTargets="$(BuildInfoTxtDependsOn)"
	AfterTargets="Build;$(BuildInfoTxtDependsOn)"
	Condition="'@(NuGetPackOutput)' != '' And ('$(WriteBuildInfoTxt)' == 'true')">

		<WriteLinesToFile File="$(BuildInfoTxtFilePath)" Lines="$(PackageVersion);@(NuGetPackOutput)" Overwrite="true"/>

	</Target>

</Project>
